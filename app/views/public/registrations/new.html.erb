<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-3">
      <h2 class="text-center mt-2">Sign up</h2>
      <div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="field mb-2">
            <%= f.label :user_name %><br />
            <%= f.text_field :user_name, class: "sm-textarea" %>
          </div>

          <div class="mb-2">
            <%= f.label :motherland, "出身国" %><br />
            <%= f.collection_select(:country_code, Country.order(:name_jp), :name_jp, :name_jp, selected: "日本") %>
          </div>

          <div class="mb-2">
            <%= f.radio_button :gender, "男" %>男
            <%= f.radio_button :gender, "女" %>女
            <%= f.radio_button :gender, "その他" %>その他
          </div>

          <div class="mb-2">
            <%= f.label :birth_date, "生年月日" %><br>
            <%=f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %>
          </div>

          <div class="field mb-2">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "sm-textarea" %>
          </div>

          <div class="field mb-2">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "sm-textarea" %>
          </div>

          <div class="field mb-2">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "sm-textarea" %>
          </div>

          <div class="actions my-2">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>