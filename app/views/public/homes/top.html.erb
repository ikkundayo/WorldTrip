
<div class="swiper">
  <div class="swiper-wrapper">
    <%= image_tag asset_path('top.jpg'), class: "swiper-slide" %>
    <%= image_tag asset_path('japan.jpg'), class: "swiper-slide" %>
    <%= image_tag asset_path('korea.jpg'), class: "swiper-slide" %>
    <%= image_tag asset_path('new.zealand.jpg'), class: "swiper-slide" %>
    <%= image_tag asset_path('philippines.jpg'), class: "swiper-slide" %>
    <%= image_tag asset_path('switzerland.jpg'), class: "swiper-slide" %>
    <%= image_tag asset_path('usa.jpg'), class: "swiper-slide" %>
    <%= image_tag asset_path('costarica.jpg'), class: "swiper-slide" %>
  </div>
</div>


<div class='container mt-5'>
  <div class='row justify-content-center'>
    <div class='col-md-10 '>
      <h3 class='text-center'>過去1ヶ月渡航人気ランキング</h3><br><br>
      <div class='nav mt-3 justify-content-between'>
        <% @reviews.each do |review| %>
          <div class='mx-5 text-center'>
            <%= link_to review_path(review.country), class: 'link-change' do %>
              <i class="flag-icon flag-icon-<%= review.country.code.downcase %> toppage_icon"></i><br>
              <h5 class='mt-2'><%= review.country_code %></h5>
            <% end %>
          </div>
        <% end %>
      </div>
     <i class="fa-solid fa-crown crown-one"></i><i class="fa-solid fa-crown crown-two"></i><i class="fa-solid fa-crown crown-three"></i>
     <h5 class="no-one">No.1</h5><h5 class="no-two">No.2</h5><h5 class="no-three">No.3</h5>

      <%= link_to reviews_path do %><p class='mt-1 text-end' >その他ランキングはこちら</p><% end %>

      <h3 class='text-center mt-5'>旅の思い出</h3>
      <div class='nav mt-3 justify-content-between'>
        <% @memories.each do |memory| %>
            <%= link_to memory_path(memory),class: 'link-change' do %>
              <div class='text-center top-memory-box'>
                <% if memory.memory_image.present?%>
                  <div class="top-memory-img"><%= image_tag memory.get_memory_image(230,230) %></div>
                <% end %>
                <h6 class="mb-3">渡航国:<%= memory.country_code %></h6>
                <div class="top-memory-content">
                  <h6><%= memory.memory_contents.truncate(40) %></h6>
                </div>
             </div>
            <% end %>
        <% end %>
      </div>
      <%= link_to memories_path('type': 'link') do %><p class='mt-3 text-end' >その他思い出はこちら</p><% end %>

      <h3 class='text-center mt-5'>ヒント</h3>
      <div class='nav mt-4 justify-content-around'>
        <div class='top_hint_width card'>
          <h5 class='text-center card-header bg-info'>現地の声</h5>
          <% @hints_voices.shuffle.first(4).each do |hint| %>
            <%= link_to hint_path(hint),class: 'link-change' do %>
              <h6 class='mx-3 mt-3 card-text'><%= hint.hint_contents.truncate(40) %></h6>
            <% end %>
          <% end %>
        </div>

        <div class='top_hint_width card'>
          <h5 class='text-center card-header bg-info'>新型コロナウイルスについて</h5>
          <% @hints_coronas.shuffle.first(4).each do |hint| %>
            <%= link_to hint_path(hint),class: 'link-change' do %>
              <h6 class='mx-3 mt-3 card-text'><%= hint.hint_contents.truncate(40) %></h6>
            <% end %>
          <% end %>
        </div>
      </div>
      <%= link_to hints_path do %><p class='mt-3 text-end' >その他ヒントはこちら</p><% end %>

    </div>
  </div>
</div>
