<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-md-9'>
      <%= link_to memories_path("type": "link") do %><div class="mt-2">全体表示</div><% end %>

      <% if @memories.blank? %>
        <h5 class="text-center">まだ投稿がありません😭</h5>
      <% else %>
        <h5 class="text-center">「<%= @search_word.country_code %>」の投稿一覧</h5>
        <%= render 'public/memories/memory_index', memories: @memories %>
      <% end %>
    </div>
  </div>
</div>