<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-md-6'>
      <div class="notice-box">
        <h3 class="text-center mt-3">通知</h3>
        <% if @notifications.exists? %>
          <%= render @notifications %>
          <div class="text-center mb-2"><%= paginate @notifications %></div>
        <% else %>
          <h5 class="mt-3 text-center">通知はありません😭</h5>
        <% end %>
      </div>
    </div>
  </div>
</div>