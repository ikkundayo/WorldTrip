<div class="container">
   <div class="row justify-content-center">
     <div class="col-md-8">
       <h1>マイページ</h1>
        <table class='table'>
          <tr><%= image_tag @user.get_user_image(100,100) %></tr>
          <tr>
        	  <th>name</th>
        	  <th><%= @user.user_name %></th>
          </tr>
          <tr>
        	  <th>母国(国旗image)</th>
        	  <th><%= @user.country.name %></th>
          </tr>
          <tr>
        	  <th>Gender</th>
        	  <th><%= @user.gender %></th>
          </tr>
          <tr>
        	  <th>Age</th>
        	  <th><%= @user_age %></th>
          </tr>
          <tr>
        	  <th>Introduction</th>
        	  <th><%= @user.introduction %></th>
          </tr>
        </table>

        <div class='row'>
          <% if @user == current_user %>
            <%= link_to 'Edit', edit_user_path(current_user) %>
          <% end %>
        </div>

        <h2 class="mt-3">マイレビュー一覧</h2><%=link_to "レビュー登録", new_review_path %>
        <%= render 'public/reviews/index', review: @reviews %>
      </div>
    </div>
  </div>
