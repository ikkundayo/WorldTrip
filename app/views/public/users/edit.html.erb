<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-3">
      <div class="text-danger">
        <%= render 'layouts/errors', obj: @user %>
      </div>
      
      <h2 class="text-center my-3">プロフィール編集</h2>
      <div class="text-first">
        <%= form_with model: @user, url: user_path, method: :patch do |f| %>
          <div class="field mb-2">
            <%= f.label :user_image, "プロフィールイメージ" %>
            <%= f.file_field :user_image, accept: "image/*", size: "40x10" %>
          </div>
          <div class="field mb-2">
            <%= f.label :user_name, "User name" %><br>
            <%= f.text_field :user_name, size: "40x10" %>
          </div>

          <div class="field mb-2">
            <%= f.label :introduction, "紹介文" %><br>
            <%= f.text_area :introduction, size: "40x10" %>
          </div>
          <div class="field mb-1">
            <%= f.submit "編集内容を保存する", class: "btn btn-sm btn-primary text-light" %>
          </div>
        <% end %>
        <%= link_to "退会する", {action: :update, quit_button: true}, method: :patch, "data-confirm" => "退会するとこれまでのデータが閲覧できなくなります。\n本当によろしいですか？" %>
      </div>
    </div>
  </div>
</div>