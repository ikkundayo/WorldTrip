<% hint.comments.each do |hint_comment| %>
  <%= link_to user_path(hint_comment.user_id) do %>
    <%= image_tag hint_comment.user.get_user_image(50,50) %><br>
    <%= hint_comment.user.user_name %>
    <% country = Country.find_by(name_jp: hint_comment.user.country_code) %>
    <i class="flag-icon flag-icon-<%= country.code.downcase %>"></i>
    <br>
  <% end %>
  <%= hint_comment.comment %><br>
  <%= time_ago_in_words(hint_comment.created_at) %> ago<br>
  <% if hint_comment.user == current_user %>
  <%= link_to "削除", hint_hint_comment_path(hint_comment.hint_id, hint_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' } %>
  <% end %><br><br>
<% end %>