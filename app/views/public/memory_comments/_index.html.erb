<% memory.comments.each do |memory_comment| %>
  <%= link_to user_path(memory_comment.user_id) do %>
    <%= image_tag memory_comment.user.get_user_image(50,50) %><br>
    <%= memory_comment.user.user_name %>
    <% country = Country.find_by(name_jp: memory_comment.user.country_code) %>
    <i class="flag-icon flag-icon-<%= country.code.downcase %>"></i><br>
  <% end %>
  <%= memory_comment.comment %><br>
  <%= time_ago_in_words(memory_comment.created_at) %> ago<br>
  <% if memory_comment.user == current_user or admin_signed_in? %>
  <%= link_to "削除", memory_memory_comment_path(memory_comment.memory_id, memory_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' } %>
  <% end %><br><br>
<% end %>