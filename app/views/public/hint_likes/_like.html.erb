  <% if hint.liked_by?(current_user) %>
    <%= link_to hint_hint_likes_path(hint.id), method: :delete, remote: true do %>
    ♥<%= hint.likes.count %> いいね
    <% end %>
  <% else %>
    <%= link_to hint_hint_likes_path(hint.id), method: :post, remote: true do %>
      ♡<%= hint.likes.count %>いいね
    <% end %>
  <% end %>
<% else %>
   ♥<%= hint.likes.count %> いいね
<% end %>
