          </div>
          <div class="icon-button">
            <i class="fa-solid fa-plane ranking-show-plane"></i><br>
            <%= @wish_count.count%>
          </div>

          <%= link_to memory_search_path(@country) do %>
            <div class="icon-button">
              <i class="fa-solid fa-camera ranking-show-camera"></i><br>
              <%= @memory_count.count%>
