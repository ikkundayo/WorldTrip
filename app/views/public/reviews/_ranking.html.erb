<h2 class="text-center"><%= user.user_name %>さんのベスト3!</h2>
<% ranking.each.with_index(1) do |reviews, index| %>
  <table class='table'>
    <tr>
      <% country = Country.find_by(name_jp: reviews.country_code) %>
      <th><%= index %>位  <i class="flag-icon flag-icon-<%= country.code.downcase %>"></i><%= reviews.country_code %> <span class="review_average<%= reviews.id%>"></span><%= reviews.review_average.round(1) %> </th>
    </tr>
  </table>
  <script>
    $('.review_average<%= reviews.id%>').raty({
    size      : 36,
    starOff   : '<%= asset_path('star-off.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    starHalf : '<%= asset_path('star-half.png') %>',
    half      : true,
    readOnly: true,
    score: <%= reviews.review_average %>,
    });
  </script>
<% end %>