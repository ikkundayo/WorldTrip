<div class="container">
   <div class="row justify-content-center">
     <div class="col-md-8">
       <div class="text-danger">
         <%= render 'layouts/errors', obj: @hint %>
       </div>

       <span class="bg-light px-2 h4">助け合い投稿</span>
       <%= form_with model: @hint, url: hints_path, local:true do |f| %>
         <div class="form-group row mt-5">
           <%= f.label :"Country", class:"col-md-4 col-form-label text-md-right fw-bold" %>
           <div class="col-md-6 px-md-0">
             <%= f.country_select :country_code %>
           </div>
         </div>

         <div class="form-group row mt-5">
           <%= f.label :"Genre", class:"col-md-4 col-form-label text-md-right fw-bold" %>
           <div class="col-md-6 px-md-0">
             <%= f.text_field :tag_list, value: @hint.tag_list %>
           </div>
         </div>

         <div class="form-group row mt-5">
           <%= f.label :"Contents", class:"col-md-4 col-form-label text-md-right fw-bold" %>
           <div class="col-md-6 px-md-0">
             <%= f.text_area :hint_contents %>
           </div>
         </div>

         <div class="form-group row mt-5">
           <div class="col-md-6 px-md-0">
             <%= f.file_field :hint_image, accept: "image/*" %>
           </div>
         </div>

         <div class="form-group text-center mt-3">
            <%= f.submit "新規登録", class:"btn btn-success btn-lg" %>
         </div>
      <% end %>
    </div>
   </div>
 </div>