      <%= link_to "全体表示", hints_path %>

      <% if params[:hint_id] == 'hoge' %>
        <% @tags.each do |tag| %>
          <%= link_to tag, hint_search_path(@q.country_code_cont, {"type": "search-tag"}) %>
        <% end %>
      <% elsif params[:type] == 'search-tag' %>
          <%= link_to "アドバイス", hint_search_path(@id, {"tag_name": "アドバイス", "type": "search-tag"}) %>
