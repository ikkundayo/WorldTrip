      <% else %>
        <% @tags.each do |tag| %>
          <%= link_to tag, hint_search_path(@country, {tag_name: tag}) %>
        <% end %>
      <% end %>



          <% if params[:hint_id] == 'hoge' %>
            <% if @hints.blank? %>
              <h5>まだ「<%= @q.country_code_cont%>」の投稿がありません😭</h5>
            <% else %>
              <h5>「<%= @q.country_code_cont%>」の投稿一覧</h5>
            <% end %>
          <% elsif params[:type] == 'search-tag' %>
            <% if @hints.blank? %>
              <h5>まだ「<%= @id %>」の投稿がありません😭</h5>
            <% else %>
              <h5>「<%= @id %>」の投稿一覧</h5>
            <% end %>
          <% else %>
            <% if @hints.blank? %>
              <h5>まだ「<%= @country_name.country_code %>」の投稿がありません😭</h5>
            <% else %>
              <h5>「<%= @country_name.country_code %>」の投稿一覧</h5>
            <% end %>
          <% end %>

          <%= render 'public/hints/hint_index', hint: @hints %>
